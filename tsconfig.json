{
  "compilerOptions": {
    "baseUrl":".",
    "downlevelIteration":true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES5",
    "allowJs": false,
    "rootDir": ".",                     
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "removeComments": true,
    "pretty": true,
    "strictPropertyInitialization": true,
    "lib": ["es2015","es2017"],
    "types":[],
    "typeRoots": [
      "./typings"
    ]
  },
  "include": [
    "./**/*.ts", "miniprogram/utils/hack.ts"
  ],
  "exclude": [
    "node_modules",
    "cli"
  ]
}
